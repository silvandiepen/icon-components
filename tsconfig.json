{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "es2021",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@": ["./src/"],
			"@/*": ["./src/*"]
		}
	},
	"lib": ["es2015"],
	"exclude": ["node_modules", "temp", "dist"]
}
