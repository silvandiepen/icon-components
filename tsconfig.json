{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "es2021",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"declaration": true,
		"baseUrl": "src",
		"jsx": "preserve",
		"paths": {
			"@": ["./"],
			"@/*": ["./*"]
		},
		"plugins": [
			{
			  "transform": "@zerollup/ts-transform-paths"
			}
		  ]
	},
	"lib": ["es2015"],
	"exclude": ["node_modules", "temp", "dist"]
}
