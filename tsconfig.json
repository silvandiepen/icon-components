{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "es2021",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"declaration": true,
		"baseUrl": "src",
		"jsx": "preserve",
		"paths": {
			"@": ["./"],
			"@/*": ["./*"]
		}
	},
	"exclude": ["node_modules", "temp", "dist", "template"]
}
